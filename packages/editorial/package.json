{
  "name": "@isardsat/editorial",
  "version": "5.3.6",
  "author": "F. Pita, G. Grau for Lobelia",
  "license": "UNLICENSED",
  "description": "Simple CMS for static websites",
  "keywords": [],
  "bin": {
    "editorial": "./lib/server/startup.js"
  },
  "main": "lib/editorial.js",
  "scripts": {
    "start": "node lib/server/startup",
    "dev": "nodemon lib/server/startup",
    "build": "yarn test && yarn compile && yarn buildClient",
    "compile": "yarn compile:clean && yarn compile:main",
    "compileWatch": "yarn compile:clean && yarn compile:mainWatch",
    "compile:clean": "rm -rf ./lib && mkdir lib",
    "compile:main": "babel src --out-dir lib --ignore \"**/__mocks__/**\",\"**/__tests__/**\",\"src/public/**\"",
    "compile:mainWatch": "yarn compile:main --watch",
    "buildClient": "yarn build:copyPublic && yarn build:webpack --mode production --env.NODE_ENV=production",
    "buildClientWatch": "yarn build:copyPublic && yarn build:webpack --mode development -w",
    "build:copyPublic": "cp -r src/public lib",
    "build:webpack": "webpack --config ./src/webpackConfig.js --color --progress --display-chunks",
    "jest": "jest --watch",
    "test": "jest"
  },
  "dependencies": {
    "@isardsat/lobelia-common": "^2.14.2",
    "better-opn": "^2.1.1",
    "body-parser": "^1.19.0",
    "commander": "^3.0.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.4",
    "core-js": "3",
    "cors": "^2.8.5",
    "execa": "^3.1.0",
    "express": "^4.17.1",
    "express-fileupload": "^1.1.5",
    "fs-extra": "^7.0.1",
    "ftp": "^0.3.10",
    "js-yaml": "^3.13.1",
    "lru-cache": "^6.0.0",
    "mady-server": "^4.1.0",
    "moment": "^2.24.0",
    "shelljs": "^0.8.3",
    "socket.io": "^2.2.0",
    "split": "^1.0.1",
    "storyboard": "^3.3.2",
    "storyboard-listener-console": "^3.3.2",
    "timm": "^1.7.1",
    "tree-kill": "^1.2.2",
    "validate-color": "^2.2.1"
  },
  "__notes__": {
    "1": "Do not remove showdown (it's required by react-mde)"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.4",
